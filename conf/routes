# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.ApplicationController.index
#GET         /lang/:lang                      controllers.ApplicationController.changeLanguage(lang: String)
GET         /getImage                        controllers.ApplicationController.getImage
GET         /image/:userId                    controllers.ApplicationController.image(userId: java.util.UUID)

GET         /questions                       controllers.QuestionsController.index
GET         /questions/:page                 controllers.QuestionsController.view(page: Int)
POST        /questions                       controllers.QuestionsController.submit

GET         /matching                        controllers.MatchingController.view

GET         /tutee/profile                   controllers.TuteeProfileController.view
GET         /tutee/profile/edit              controllers.TuteeProfileController.edit
POST        /tutee/profile                   controllers.TuteeProfileController.submit

GET         /tutor/profile                   controllers.TutorProfileController.view
GET         /tutor/profile/edit              controllers.TutorProfileController.edit
POST        /tutor/profile                   controllers.TutorProfileController.submit

GET         /events/:eventID/delete          controllers.EventController.delete(eventID: Long)
GET         /events/:eventID/update          controllers.EventController.update(eventID: Long, start: java.time.LocalDateTime, end: java.time.LocalDateTime)

GET         /tutee/tutor/:tutorID/calendar   controllers.EventTuteeController.tutorCalendar(tutorID: java.util.UUID)
GET         /tutee/lessons                   controllers.EventTuteeController.myLessons
GET         /tutee/events.json               controllers.EventTuteeController.events(start: java.time.LocalDateTime, end: java.time.LocalDateTime)
GET         /tutee/events/request            controllers.EventTuteeController.requestLesson(tutorID: java.util.UUID, start: java.time.LocalDateTime, end: java.time.LocalDateTime, description: String)
GET         /tutee/tutorEvents.json          controllers.EventTuteeController.tutorEvents(tutorID: java.util.UUID, start: java.time.LocalDateTime, end: java.time.LocalDateTime)
GET         /tutee/events/:eventID/details   controllers.EventTuteeController.details(eventID: Long)

GET         /tutor/lessons                   controllers.EventTutorController.myLessons
GET         /tutor/events.json               controllers.EventTutorController.events(start: java.time.LocalDateTime, end: java.time.LocalDateTime)
GET         /tutor/events/addAvailability    controllers.EventTutorController.addAvailability(start: java.time.LocalDateTime, end: java.time.LocalDateTime)
GET         /tutor/events/:eventID/details   controllers.EventTutorController.details(eventID: Long)
GET         /tutor/events/:eventID/confirm   controllers.EventTutorController.confirm(eventID: Long)
GET         /tutor/events/:eventID/decline   controllers.EventTutorController.decline(eventID: Long, reason: String)

GET         /signOut                         controllers.ApplicationController.signOut
GET         /authenticate/:provider          controllers.SocialAuthController.authenticate(provider)

GET         /signUp                          controllers.SignUpController.view
POST        /signUp                          controllers.SignUpController.submit

GET         /signIn                          controllers.SignInController.view
POST        /signIn                          controllers.SignInController.submit

GET         /password/forgot                 controllers.ForgotPasswordController.view
POST        /password/forgot                 controllers.ForgotPasswordController.submit
GET         /password/reset/:token           controllers.ResetPasswordController.view(token: java.util.UUID)
POST        /password/reset/:token           controllers.ResetPasswordController.submit(token: java.util.UUID)
GET         /password/change                 controllers.ChangePasswordController.view
POST        /password/change                 controllers.ChangePasswordController.submit

GET         /account/email/:email            controllers.ActivateAccountController.send(email: String)
GET         /account/activate/:token         controllers.ActivateAccountController.activate(token: java.util.UUID)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.versioned(file)
->          /webjars                         webjars.Routes
